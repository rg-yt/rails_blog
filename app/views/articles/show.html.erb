<div>
  <h1 class="font-bold text-4xl"><%= @article.title %></h1>
  <div class='flex gap-2'>
    <p><%= @article.body %></p>
    <p><%= link_to 'Edit', edit_article_path(@article) %></p>
    <p><%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>
  </div>
  <h2 class="font-bold text-2xl">Comments</h2>
  <%= render @article.comments %>
  <h2 class="font-bold text-2xl">Add a comment:</h2>
  <%= render 'comments/form' %>
</div>
