<div>
  <h1 class="font-bold text-4xl"><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <ul>
    <li><%= link_to 'Edit', edit_article_path(@article) %></li>
    <li><%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></li>
  </ul>
  <h2 class="font-bold text-2xl">Add a comment:</h2>
  <%= form_with modle: [@article, @article.comments.build] do |form| %>
    <div>
      <%= form.label :commenter %>
      <%= form.text_field :commenter %>
    </div>
    <div>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>